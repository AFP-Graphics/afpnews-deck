{
  "version": 2,
  "name": "afpnews-deck",
  "builds": [
    { "src": "package.json", "use": "@now/static-build" }
  ],
  "routes": [
    {
      "src": "^/sw.min.js",
      "headers": {
        "cache-control": "s-maxage=0",
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff"
      },
      "dest": "/sw.min.js"
    },
    {
      "src": "^/(doc|document|slug|place|creator|login|browser-warning|about|tour)(.*)",
      "headers": {
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY"
      },
      "dest": "/index.html"
    },
    {
      "src": "^/(.*)",
      "headers": {
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff",
        "Vary": "Accept-Encoding"
      },
      "dest": "/$1"
    }
	]
}
